            <h4>Código: <%= productos.codigo %></h4><br>
            <h4>Precio: <%= productos.precio %></h4><br>
            <h4>Marca: <%= productos.marca %></h4><br>
            <h4>Modelo: <%= productos.modelo %></h4><br>
            <h4>Descripcion: <%= productos.descripcion %></h4><br>
            <button type="submit" class="btn_btn-primary">Eliminar</button>
        </form>
    </div>

    <a href="/productos"><img src="/img/back.png" width="30" id="boton"></a>

