    </header><br><br><br><br><br><br>

                    <div>
                        <h1>Listado de clientes registrados</h1><br>
                        <table border="1px">
                       
                            <tr>
                                <th>
                                    <p>N°</p>
                                </th>
                                <th>
                                    <p>Correo</p>
                                </th>
                                <th>
                                    <p>Contraseña</p>
                                </th>
                                <th>
                                    <p>Pregunta de Seguridad</p>
                                </th>
                                <th>
                                    <p>Respuesta de Seguridad</p>
                                </th>
                            </tr>
                            <tr>
                                <% if (clientes) { %>
                                    <% for (let i=0; i < clientes.length; i++){ %>
                                        <% if (clientes) { %>
                            <tr>
                                <td>
                                    <%= (i + 1) %>
                                </td>
                                <td>
                                    <%= clientes[i].email %>
                                </td>
                                <td>
                                    <%= clientes[i].password %>
                                </td>
                                <td>
                                    <%= clientes[i].preg_seg %>
                                </td>
                                <td>
                                    <%= clientes[i].resp_seg %>
                                </td>
                            </tr>
                            <% } %>
                                <% } %>
                                    <% } else { %>
                                        <tr>
                                            <th>No hay clientes en el sistema</th>
                                        </tr>
                                        <% } %>
                                            </tr>
                        </table>
                    </div>
    

        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
